{
  "extends": ["config:recommended"],
  "baseBranchPatterns": ["dev", "test"],
  "branchPrefix": "renovate/",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "automerge": false,
  "recreateClosed": true,
  "rebaseWhen": "never",
  "rangeStrategy": "replace", 

  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on Monday"]
  },

  "packageRules": [
    {
      "groupName": "ALL Dependencies - ONE PR",
      "groupSlug": "all-in-one-final",
      "matchUpdateTypes": ["major", "minor", "patch", "pin"],
      "matchPackagePatterns": ["*"], 
      "rangeStrategy": "replace" 
    }
  ]
}