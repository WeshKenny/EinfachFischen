{
  "extends": ["config:recommended"],
  "baseBranchPatterns": ["dev"],
  "branchPrefix": "renovate/",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "automerge": false,
  "rangeStrategy": "update-lockfile",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on Monday"]
  },
  "groupName": "all dependencies",
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all-deps",
      "automerge": false,
      "matchUpdateTypes": ["minor", "patch", "pin"]
    }
  ]
}