{
  "extends": ["config:recommended"],
  "baseBranchPatterns": ["dev", "test"],
  "branchPrefix": "renovate/",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "automerge": false,
  "recreateClosed": true,
  "rebaseWhen": "never",
  "rangeStrategy": "update-lockfile",

  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on Monday"]
  },

  "packageRules": [
    {
      "groupName": "ALL Dependency Upgrades - ONE PR",
      "groupSlug": "all-upgrades-one-pr",
      
      "rangeStrategy": "replace"
    },
    {
        "groupName": "ALL Dependency Upgrades - ONE PR",
        "groupSlug": "all-upgrades-one-pr",
        "matchPackagePatterns": ["^@angular/", "^zone\\.js$"], 
        "rangeStrategy": "replace"
    },
    {
        "groupName": "ALL Dependency Upgrades - ONE PR",
        "groupSlug": "all-upgrades-one-pr",
        "matchSourceUrls": ["https://github.com/angular/angular-cli"],
        "rangeStrategy": "replace"
    }
  ]
}