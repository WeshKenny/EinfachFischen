{
  "extends": ["config:recommended"],
  "baseBranchPatterns": ["dev", "test"],
  "branchPrefix": "renovate/",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "automerge": false,
  "rangeStrategy": "update-lockfile",
  "recreateClosed": true,
  "rebaseWhen": "never",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on Monday"]
  },
  "packageRules": [
    {
      "groupName": "All Dependencies",
      "groupSlug": "all-deps",
      "matchUpdateTypes": ["major", "minor", "patch", "pin"]
    },
    {
      "groupName": "All Dependencies",
      "groupSlug": "all-deps",

      "matchPackagePatterns": ["^@angular/", "^zone\\.js$"], 
      "rangeStrategy": "replace"
    },
    {
      "groupName": "All Dependencies",
      "groupSlug": "all-deps",
      "matchSourceUrls": ["https://github.com/angular/angular-cli"],
      "rangeStrategy": "replace"
    }
  ]
}