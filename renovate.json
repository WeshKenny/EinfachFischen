{
  "extends": ["config:recommended"],
  "baseBranchPatterns": ["dev", "test"],
  "branchPrefix": "renovate/",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "automerge": false,
  "rangeStrategy": "update-lockfile",
  "rebaseWhen": "never",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on Monday"]
  },
  "packageRules": [
    {
      "groupName": "All Dependencies",
      "groupSlug": "all-deps",
      "matchUpdateTypes": ["major", "minor", "patch", "pin"]
    },
    {
      "matchPackageNames": ["@angular/animations", "@angular/build", "@angular/common", "@angular/compiler", "@angular/compiler-cli", "@angular/core", "@angular/forms", "@angular/platform-browser", "@angular/platform-browser-dynamic", "@angular/platform-server", "@angular/router", "@angular/ssr", "zone.js"],
      "rangeStrategy": "replace"
    }
  ]
}